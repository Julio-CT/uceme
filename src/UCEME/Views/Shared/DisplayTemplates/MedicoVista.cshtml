@model Uceme.Model.Models.ClasesVista.MedicoVista

@{
    Layout = null;
    var showEditButton = ViewBag.ShowEditButton;
    var imagen = "nada";
    if (Model.Foto != null)
    {
        var srt = Model.Foto;
        imagen = Url.Content(srt);
    }
}

@if (Request.IsAuthenticated && showEditButton)
{
    <div class="botones" style="float: right;padding:10px;">
        <input type="button" class="editar" name="editar" id="editar" value=" " />
    </div>
}

<div class="display-field">
    @Html.HiddenFor(model => model.IdUsuario, new { id = "idUsuario" })
    @Html.HiddenFor(model => model.IdCurriculum, new { id = "idCurriculum" })
    @Html.HiddenFor(model => model.IdDatosContacto, new { id = "idDatosContacto" })
</div>
<br />
<div id="carnet" style="background-color:#fff;width:100%;height:220px;">
    <div class="display-field" style="float: left; width: 150px; padding: 10px;margin-left:50px;margin-right:20px;padding-top:30px;">
        <img src="@imagen" alt="foto" class="img-responsive" style="width:120px;border:1px solid #808080;" />
        @Html.ValidationMessageFor(model => model.Foto)
    </div>

    <div style="float: left; padding: 30px; width: 400px;">
        <div class="display-field" style="font-weight:bolder;color:#780303;font-size:larger;">
            @Model.Nombre @Model.Apellidos
        </div>
        <div class="display-field">
            <h3>
                @Html.DisplayFor(model => model.Curriculum.Titulo)
            </h3>
        </div>
        <br />
        <div class="display-label">
            @Html.Label("Email de contacto")
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Login)
        </div>
        <br />
        <div class="display-label">
            @Html.Label("Perfil de Linkedin")
        </div>
        <div class="display-field">
            <a href="@Html.Raw(Model.Linkedin)" target="_blank">Pinche aqui</a>
        </div>
    </div>
</div>
<div class="clearboth"></div>
<br />

<div id="curriculum" class="display-label curriculum">
    <div class="display-label">
        @Html.Label("Curriculum")
    </div>
    <br />
    @Html.DisplayFor(model => model.Curriculum.ItemCurriculum)
</div>
<br />
<br />