@model Uceme.Model.Models.ClasesVista.UsuarioVista

@{
    ViewBag.Title = "editarUsuario";
    var srt = Model.Foto;
    var imagen = Url.Content(srt);
}

<br />

@using (Html.BeginForm("EditarUsuario", "GestionUsuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
            @Html.HiddenFor(model => model.IdUsuario)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Apellidos)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Apellidos)
            @Html.ValidationMessageFor(model => model.Apellidos)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nick)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nick)
            @Html.ValidationMessageFor(model => model.Nick)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Foto)
        </div>
        <div class="editor-field">
            <img src="@imagen" style="margin-right:10px;" width="200" height="200" />
            <input type="file" id="fichero" name="fichero" title="Foto" style="width: 625px;" />
            @Html.ValidationMessageFor(model => model.Foto)
        </div>

        <div class="editor-field">
            @Html.Label("Rol")
            @Html.DropDownList("idRol")
            @Html.ValidationMessageFor(model => model.IdRol)<br />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Newsletter)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Newsletter)
            @Html.ValidationMessageFor(model => model.Newsletter)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Linkedin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Linkedin)
            @Html.ValidationMessageFor(model => model.Linkedin)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>