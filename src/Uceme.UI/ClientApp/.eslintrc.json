{
    "root": true,
    "ignorePatterns": [
        "projects/**/*"
    ],
    "overrides": [
        {
            "files": [
                "**/*.ts",
                "**/*.tsx",
                "**/*.component.ts",
                "**/*.service.ts"
            ],
            "excludedFiles": [
                "setupTests.ts",
                "**/*.spec.ts",
                "**/*.stub.ts",
                "**/*.test.tsx",
                "**/*.d.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json",
                    "tsconfig.*?.json",
                    "e2e/tsconfig.e2e.json"
                ],
                "createDefaultProgram": true
            },
            "extends": [
                "airbnb-typescript-prettier",
                "prettier/@typescript-eslint",
                "plugin:prettier/recommended"
            ],
            "rules": {
                "no-restricted-globals": "off"
            }
        },
        {
            "files": [
                "setupTests.ts",
                "**/*.spec.ts",
                "**/*.stub.ts",
                "**/*.test.tsx",
                "**/*.d.ts"
            ],
            "extends": [
                "plugin:jest/recommended",
                "prettier/@typescript-eslint"
            ],
            "plugins": [
                "jest"
            ],
            "env": {
                "jest/globals": true
            },
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "project": [
                    "tsconfig.json",
                    "tsconfig.*?.json",
                    "e2e/tsconfig.e2e.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@typescript-eslint/no-unused-vars": "off"
            }
        },
        {
            "files": [
                "*.html"
            ],
            "extends": [
                "eslint:recommended"
            ],
            "rules": {}
        },
        {
            "files": [
                "**/*.js"
            ],
            "extends": [
                "eslint:recommended"
            ],
            "rules": {},
            "parserOptions": {
                "ecmaVersion": 2017
            },
            "env": {
                "es6": true
            }
        }
    ]
}