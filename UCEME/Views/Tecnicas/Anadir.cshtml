@model Uceme.Model.Models.ClasesVista.TecnicaVista

@{
    ViewBag.Title = "Anadir";
}

@using (Html.BeginForm("Anadir", "Tecnicas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <h3 style="text-align: center;">Título: @Html.TextBoxFor(model => model.Titulo)</h3>
    <h5>Imagen:</h5>
    <img src="@Html.DisplayFor(model => model.Foto)" style="margin-right:10px;width:200px;height:200px;" />
    <input type="file" id="fichero" name="fichero" title="Cambiar Foto" style="width: 625px;" />
    <h5>Texto:</h5>
    @Html.EditorFor(model => model.Texto)

    <div class="botones" style="width: 350px;">
        <input class="aceptar" style="float: left; margin-left: 0px;" type="submit" value=" " />
        <input class="cancelar" style="float: left; margin-left: 10px;" type="button" onclick="refrescar('tecnicas')" value=" " />
    </div>
}
