@model UCEME.Models.ClasesVista.BlogVista

@{
    ViewBag.Title = "Anadir";
}

@using (Html.BeginForm("Anadir", "Articulos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <h3 align="center">Título: @Html.TextBoxFor(model => model.Titulo)</h3>
    <h5>Imagen:</h5>
    <img src="@Html.DisplayFor(model => model.Foto)" class="articuloaddimg" />
    <input type="file" id="fichero" name="fichero" title="Cambiar Foto" class="articuloaddtext" />
    <h5>Texto:</h5>
    @Html.EditorFor(model => model.Texto)

    <div class="botones" style="width: 350px;">
        <input class="aceptar" style="float: left; margin-left: 0;" type="submit" value=" " />
        <input class="cancelar" style="float: left; margin-left: 10px;" type="button" onclick="refrescar('articulos')" value=" " />
    </div>
}
<br />
<br />
@section scripts {
    <script type="text/javascript" src="~/Scripts/Internal/Articulos/Anadir.js" async></script>
}