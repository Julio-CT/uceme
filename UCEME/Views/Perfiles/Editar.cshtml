@model Uceme.Model.Models.ClasesVista.MedicoVista

@{
    ViewBag.Title = "Perfil de " + Model.Nombre + " " + Model.Apellidos;
    var imagen = "nada";
    if (Model.Foto != null)
    {
        var srt = Model.Foto;
        imagen = Url.Content(srt);
    }
}

<h2 class="titulo">Editar Perfil  de @Model.Nombre @Model.Apellidos</h2>

@using (Html.BeginForm("Editar", "Perfiles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="display-field">
        @Html.HiddenFor(model => model.IdUsuario)
        @Html.HiddenFor(model => model.IdCurriculum)
        @Html.HiddenFor(model => model.IdDatosContacto)
    </div>

    <div class="editor-label">
        @Html.Label("Fotografia: (preferentemente jpg de 150x120)")
        <img src="@imagen" alt="Logo" height="150" width="120" />
        <br />
        Subir nueva imagen:<br />
        <input type="file" name="fichero" id="fichero" />
        <br />
        @Html.ValidationMessageFor(model => model.Foto)
    </div>

    <div class="display-field">
        <h3>
            @Html.EditorFor(model => model.Curriculum.Titulo)
        </h3>
    </div>
    <br />
    <div class="display-label">
        @Html.Label("Email de contacto")
    </div>
    <div class="display-field">
        @Html.EditorFor(model => model.Login)
    </div>
    <div class="display-label">
        @Html.Label("Enlace a Linkedin")
    </div>
    <div class="display-field">
        @Html.EditorFor(model => model.Linkedin)
    </div>
    <br />
    <div class="display-label">
        @Html.Label("Curriculum")
    </div>

    <div class="display-label curriculum" id="items">
        @Html.EditorFor(model => model.Curriculum.ItemCurriculum)

        <div id="newitem"></div>
        <div class="botones" style="float: left;">
            <input type="button" class="nuevo" name="addElem" id="addElem" />
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="botones" style="width: 350px;">
        <input class="aceptar" style="float: left; margin-left: 0;" type="submit" value=" " />
        <input class="cancelar" style="float: left; margin-left: 10px;" type="button" id="back" value=" " />
    </div>

}
@section scripts {
<script src="~/Scripts/Internal/Perfiles/Editar.js"async></script>
}