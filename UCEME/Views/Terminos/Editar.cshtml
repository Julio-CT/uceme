@model UCEME.Models.Termino

@{
    ViewBag.Title = "Editar Termino";
    var imagen = "nada";
    if (!string.IsNullOrEmpty(Model.foto))
    {
        var srt = Model.foto;
        imagen = Url.Content(srt);
    }

}

<h2 class="titulo">Editar Termino</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Termino</legend>

        @Html.HiddenFor(model => model.idTermino)

        <div class="editor-field">
            @Html.EditorFor(model => model.nombre)
            @Html.ValidationMessageFor(model => model.nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.texto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.texto)
            @Html.ValidationMessageFor(model => model.texto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.link)
            @Html.ValidationMessageFor(model => model.link)
        </div>

        <div class="editor-label">
            @Html.Label("Fotografia: (preferentemente jpg de 200x150)")
            <img src="@imagen" alt="Logo" height="150" width="200" />
            <br />
            Subir nueva imagen:<br />
            <input type="file" name="fichero" id="fichero" />
            <br />
            @Html.ValidationMessageFor(model => model.foto)
        </div>

        <div class="botones" style="width: 350px;">
            <input class="aceptar" style="float: left; margin-left: 0px;" type="submit" value=" " />
            <input class="cancelar" style="float: left; margin-left: 10px;" type="button" id="back" value=" " />
        </div>
    </fieldset>
}
@section scripts {
    <script src="~/Scripts/Internal/Terminos/Editar.js"async></script>
}